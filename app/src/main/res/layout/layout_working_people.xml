<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontal_cards_list"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/card_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                android:id="@+id/card_person1"
                layout="@layout/card_working_person"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" />

            <include
                android:id="@+id/card_person2"
                layout="@layout/card_working_person"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" />

            <include
                android:id="@+id/card_person3"
                layout="@layout/card_working_person"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" />

            <include
                android:id="@+id/card_person4"
                layout="@layout/card_working_person"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/swipe_icon"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/horizontal_cards_list"
        app:srcCompat="@drawable/outline_swipe_black" />

    <TextView
        android:id="@+id/text_swiping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Look for more"
        android:textAlignment="center"
        android:layout_below="@+id/swipe_icon"
        android:textSize="18sp" />


    <Button
        android:id="@+id/button_filter_networking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Filters"
        android:textSize="15dp" />
</RelativeLayout>